<%- contentFor('navbar') %>
<%- include('../partials/navbar.ejs') %>

<%- contentFor('body') %>
<div class="content">
    <div class="container">
      <div class="row justify-content-center" >
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="form-block">
                <div class="mb-4">
                  <h3>기사 수정</h3>
                </div>
                  <div class="mb-4">
                      <label class="form-label" for="category">카테고리</label>
                      <select class="form-control" name="category" id="category">
                        <% Object.keys(category).filter(key => key !== '전체').forEach((key) => { %>
                          <option value="<%=category[key]%>" <%= article.category === key ? 'selected' : '' %> >
                            <%=key%>
                          </option>
                        <% }) %>
                      </select>
                  </div>
                  <div class="mb-4">
                    <div class="article__headline">
                        <label class="form-label" for="headline">헤드라인</label>
                        <input class="form-control" type="text" id="headline" name="headline" value='<%= article.headline %>' placeholder="뉴스의 헤드라인을 입력해주세요"
                        maxlength="255" />
                    </div>
                  </div>
                  <div class="mb-4">
                    <label for="current-picture">현재 사진</label>
                    <br>
                    <img src=<%= article.image %> alt="current-picture" width="300px" height="300px">
                    <br>
                    <label class="form-label" for="picture">새로운 사진</label>
                    <input class="form-control" type="file" id="picture" name="picture" accept="image/gif, image/jpeg, image/png" />
                    <label class="form-label" for="imageDesc">사진 설명</label>
                    <input class="form-control" type="text" id="imageDesc" name="imageDesc" value="<%= article.imageDesc %>" placeholder="사진에 대한 설명을 적어주세요" />
                    <label class="form-label" for="imageFrom">사진 출처</label>
                    <input class="form-control" type="text" id="imageFrom" name="imageFrom" value="<%= article.imageFrom %>" placeholder="사진에 대한 출처를 적어주세요" />
                  </div>
                  <div class="mb-4">
                    <label class="form-label" for="breifing">100자 브리핑</label>
                    <div id="editorjs"></div>
                  </div>
                  <div class="mb-4">
                    <div class="article__paragraphs">
                      <div class="article__paragraphs--select">
                        <select name="paragraph-select" class="form-control paragraph-select">
                          <option value='포인트'>포인트</option>
                          <option value='향후예측'>향후예측</option>
                          <option value='논쟁점'>논쟁점</option>
                          <option value='직접입력(더블클릭으로 수정)'>직접입력</option>
                        </select>
                        <button  type="button" class="btn btn-primary paragraph-list--Btn">소단락 추가</button>
                      </div>
                      <div class="paragraph-list">
                      <% if (paragraphs && paragraphs.length > 0) { %>
                        <% paragraphs.forEach((p)=> { %>
                        <div class="paragraph-list__item">
                          <label class="form-label" for=paragraph-title ></label>
                          <input class="form-control paragraph-item__title" id="paragraph-title" name="paragraph-title" value="<%= p.title %>" readonly="readonly" >
                          <label class="form-label" for="paragraph-conetent" ></label>
                          <textarea class="form-control paragraph-item__content" id="paragraph-content" name="paragraph-content"><%= p.content %></textarea>
                          <button type="button" class="btn btn-warning paragraph-item__deleteBtn">삭제</button>
                        </div>
                        <% }) %>
                      <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="mb-4">
                  </div>
                  <div class="mb-4">
                  </div>
                  <div class="d-grid gap-2">
                    <button class="article--save btn btn-primary" name="saveBtn" type="submit">저장</button>
                    <button class="article--complete btn btn-info" name="completeBtn" type="submit">완료</button>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- contentFor('footer') %>
  <%- include('../partials/footer.ejs') %>
<script>
  var editorContent = JSON.parse('<%- article.briefing %>');
  console.log(editorContent)
</script>

