<a class="article-link" href=<%=`/articles/${article.id}` %> >
  <article class="article-wrapper">
    <h1 class="article__title">
      <%= article.headline %>
    </h1>
    <div class="article__info">
      <div>
        <img class="article__info--authorImg" src=<%=article.authorImg %> />
        <div>
          <span>
            <%= article.author %>
          </span>
          <span>
            <%= article.category %>
          </span>
        </div>
        <span>
          <%= article.updatedAt %> 작성됨
        </span>
      </div>
    </div>
    <img class="article__image" src=<%=article.image %> >
    <div class="article__image--info">
      <p>
        <%= article.imageDesc %>
      </p>
      <p>
        <%= article.imageFrom %>
      </p>
    </div>
    <p class="article__briefing">
      <%= article.briefing %>
    </p>
    <hr class="solid" noshade="true">
  </article>
</a>