<%- contentFor('navbar') %>
<%- include('./components/nav-back.ejs') %>

<%- contentFor('body') %>
<div class="article-page">
  <div class="article">
  <div class="article__top">
    <div class=<%=`icon-${article.category}-black` %>></div>
    <p class="article__top__text ft-detail">
      <%= article.Author.name %>/<%= article.updatedAt %>
    </p>
  </div>
  <p class="article__title ft-title">
    <%= article.headline %>
  </p>
  <img class="article__img" src=<%=article.image %>>
  <p class="article__imgtext ft-detail">
    <%= article.imageDesc %> <%= article.imageFrom %>
  </p>
  <div id="editor_briefing" class="article__brief-text ft-main">
  </div>
  <div id="editor_paragraphs" class="article__brief-text ft-main">
  </div>
  <p class="article__main-text ft-main">
  </p>
  <div class="article__control">
    <div></div>
    <div id="share-modal-1" class="share-modal">
      <div class="modal-content">
        <div class="title">
          <span id="share-close-1" class="share-close">&times;</span>                                                        
          <h3>공유하기</h3>
        </div>
        <br><hr style="border: solid 1px gray;"><br>
        <div class="content">
          <ul class="share-layer-content">
            <li> <button id="kakao-share-button" class="article_kakao_share-button"></button></li> 
            <li> <button onclick="facebookshare(window.location.href)" class="article_facebook_share-button"></button></li> 
            <li> <button onclick="urlshare(window.location.href)" class="article_url_share-button">url</button></li> 
          </ul>
        </div>
      </div>
    </div>
    <div class="article__control__right-buttons">
      <!--TODO:공유,북마크 기능 herf 추가-->
      <button onclick="modalFunction('1')" class="article__control__right-buttons__share-button"></button>
      <button id="btn_bookmark" class="article__control__right-buttons__bookmark-button"></button>
    </div>
  </div>
</div>
</div>
<script>
  var briefingContent = '<%- article.briefing %>';
  var paragraphsContent = '<%- article.paragraphs %>';
</script>
<br></br><br></br>
<%- contentFor('footer') %> <%- include('./components/foo.ejs') %>
<script defer src="https://developers.kakao.com/sdk/js/kakao.min.js"></script>
<script>
  // SDK를 초기화 합니다. 사용할 앱의 JavaScript 키를 설정해 주세요.
  var kakaoAppKey = '<%= process.env.KAKAO_JS_KEY %>';
  Kakao.init(kakaoAppKey);
  // SDK 초기화 여부를 판단합니다.
  if (!Kakao.isInitialized())
    console.log("kakao app key 초기화 실패");
</script>
<script type="module" src="/javascripts/user/article.js"></script>
