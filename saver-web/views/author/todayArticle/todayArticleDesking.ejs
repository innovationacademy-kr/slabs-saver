

<%- contentFor('navbar') %>
<%- include('../../partials/navbar.ejs') %>
<%- contentFor('body') %>
<section class="desking-table">
  <button class="update-btn btn btn-green" type="submit">업데이트</button>
  <%# TODO: 필터링or검색기능 %>
    <table class="table" name="table">
      <thead class="table-header">
        <tr class="table-haeder__row">
          <th class="table-header__cell">NO</th>
          <th class="table-header__cell">기사</th>
          <th class="table-header__cell">작성자</th>
          <th class="table-header__cell">입력일시</th>
          <th class="table-header__cell">오늘의기사 지정일자</th>
          <th class="table-header__cell"></th>
        </tr>
      </thead>
      <tbody class="table-body">
        <% articles.map((article)=> { %>
            <tr class="table-body__row" name="cols">
              <td class="table-body__cell">
                <%= article.id %>
              </td>
              <td class="table-body__cell">
                <a href="/author/articles/<%= article.id %>/preview" target="_blank">
                  <%= unescape(article.headline) %>
                </a>
              </td>
              <td class="table-body__cell">
                <%= article.Author.name %>
              </td>
              <td class="table-body__cell">
                <%= article.updatedAt %>
              </td>
              <td class="table-body__cell">
                <input class="date" type="date" value="<%= article.TodayArticle.date %>"
                  data-id="<%= article.id %>">
              </td>
              <td class="table-body__cell">
                <button class="reset btn btn-primary btn-fit" type="reset" 
                style="min-width: 69.2px;"
                data-id="<%= article.id %>">초기화</button>
              </td>
              <% }) %>
            </tr>
      </tbody>
    </table>

</section>

<section class="list-buttons flex-section" style="margin-bottom: 2rem;">

  <% if (underLimitPage != 0) { %>
    <a class = "btn btn-primary margin-btn"  href= <%="/author/todayArticleDesking?page=0"%>> < </a>
  <% } %>
  <% for(var i = underLimitPage; i < underLimitPage + 5 && i <= totalPage; i++){ %>
    <a class = "btn btn-primary margin-btn" href= <%=`/author/todayArticleDesking?page=${i}`%>> <%=i + 1%> </a>
  <% } %>
  <% if (page + 2 < totalPage) { %>
    <a class = "btn btn-primary margin-btn" href=<%=`/author/todayArticleDesking?page=${totalPage}`%> > > </a>
  <% } %>

  </section>

